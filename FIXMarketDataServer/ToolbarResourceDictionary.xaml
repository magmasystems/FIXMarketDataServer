<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base style for all buttons in a toolbar. You have to state this explicitly -->
    <Style TargetType="Button" x:Key="ToolbarButtonStyle">
        <Setter Property="Margin" Value="8,0,8,0" />
    </Style>

    <!-- Inheritence of styles -->
    <Style TargetType="{x:Type Button}" x:Key="BlueToolbarButtonStyle" BasedOn="{StaticResource ToolbarButtonStyle}">
        <Setter Property="Foreground" Value="Blue"/>
    </Style>

</ResourceDictionary>